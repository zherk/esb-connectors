<component name="basecrm-contacts" type="synapse/template">
   <subComponents>
      <component name="listContacts">
         <file>listContacts.xml</file>
         <description>Retrieves a list of contacts.</description>
      </component>
      <component name="setContact">
         <file>setContact.xml</file>
         <description>Updates contact information.</description>
      </component>
      <component name="createContacts">
         <file>createContacts.xml</file>
         <description>Creates a new contact.</description>
      </component>
      <component name="getContactById">
         <file>getContactById.xml</file>
         <description>Retrieves contact information by the contact ID.</description>
      </component>
      <component name="getContactNotes">
         <file>getContactNotes.xml</file>
         <description>Retrieves a list of notes of a specific contact.</description>
      </component>
      <component name="createContactNote">
         <file>createContactNote.xml</file>
         <description>Creates a new note for a specific contact.</description>
      </component>
      <component name="getContactReminders">
         <file>getContactReminders.xml</file>
         <description>Retrieves a list of reminders of a specific contact.</description>
      </component>
      <component name="createContactReminder">
         <file>createContactReminder.xml</file>
         <description>Creates a new reminder for a specific contact.</description>
      </component>
      <component name="getContactDeals">
         <file>getContactDeals.xml</file>
         <description>Retrieves collection of deals which belong to a contact.</description>
      </component>
   </subComponents>
</component>