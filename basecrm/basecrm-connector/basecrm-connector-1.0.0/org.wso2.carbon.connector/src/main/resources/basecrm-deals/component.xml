         <file>createDealNote.xml</file>
         <description>Creates a new note for a specific deal.</description>
      </component>
      <component name="getDealReminders">
         <file>getDealReminders.xml</file>
         <description>Retrieves a list of reminders of a specific deal.</description>
      </component>
      <component name="createDealReminder">
         <file>createDealReminder.xml</file>
         <description>Creates a new reminder for a specific deal.</description>
      </component>
